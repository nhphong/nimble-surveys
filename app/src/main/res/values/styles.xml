<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorControlNormal">@color/white</item>
    <item name="titleTextColor">@color/white</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="DefaultTextView" parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/desc_text_size</item>
    <item name="android:layout_marginStart">@dimen/normal_margin</item>
    <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="BoldTextView" parent="DefaultTextView">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TitleTextView" parent="BoldTextView">
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textSize">@dimen/title_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginTop">@dimen/top_margin</item>
  </style>

  <style name="WhiteTitleTextView" parent="TitleTextView">
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="CentralTextView" parent="TitleTextView">
    <item name="android:layout_marginTop">0dp</item>
  </style>

  <style name="DescriptionTextView" parent="DefaultTextView">
    <item name="android:layout_marginTop">@dimen/small_margin</item>
    <item name="android:layout_marginBottom">@dimen/normal_margin</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:scrollbars">vertical</item>
  </style>

  <style name="Button" parent="DefaultTextView">
    <item name="android:layout_marginBottom">@dimen/bottom_margin</item>
    <item name="android:background">@drawable/rounded_btn</item>
    <item name="android:paddingStart">@dimen/big_padding</item>
    <item name="android:paddingTop">@dimen/normal_padding</item>
    <item name="android:paddingEnd">@dimen/big_padding</item>
    <item name="android:paddingBottom">@dimen/normal_padding</item>
  </style>
</resources>
